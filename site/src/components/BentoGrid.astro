---
// Bento-style content grid — mixed article sizes for visual rhythm
const articles = [
  {
    category: 'Web3',
    categoryColor: 'text-violet-light',
    title: 'Airdrop Starknet : guide complet pour maximiser vos allocations',
    excerpt: 'Tout ce qu\'il faut savoir sur les critères d\'éligibilité et les stratégies d\'optimisation.',
    size: 'large',
    time: '6 min',
    author: 'Sophie Durand',
    bgGradient: 'from-violet/15 to-transparent',
  },
  {
    category: 'Guide',
    categoryColor: 'text-gold',
    title: 'Comprendre le halving Bitcoin 2025 : impact réel sur le prix',
    excerpt: 'Analyse historique et projections.',
    size: 'small',
    time: '4 min',
    author: 'Marc Lefebvre',
    bgGradient: 'from-gold/10 to-transparent',
  },
  {
    category: 'NFT',
    categoryColor: 'text-info',
    title: 'NFTs et gaming : les 5 projets qui redéfinissent le play-to-earn',
    excerpt: 'De nouveaux modèles économiques émergent.',
    size: 'small',
    time: '5 min',
    author: 'Lea Martin',
    bgGradient: 'from-info/10 to-transparent',
  },
  {
    category: 'Analyse',
    categoryColor: 'text-positive',
    title: 'Layer 2 Wars : Arbitrum vs Optimism vs Base — le comparatif définitif',
    excerpt: 'Performances, écosystème, frais et adoption : on compare les trois leaders du scaling Ethereum.',
    size: 'large',
    time: '10 min',
    author: 'Thomas Petit',
    bgGradient: 'from-positive/10 to-transparent',
  },
];
---

<section class="py-section">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-3">
        <div class="w-1 h-6 bg-gold rounded-full"></div>
        <h2 class="font-display font-700 text-h2">À ne pas manquer</h2>
      </div>
      <a href="/articles" class="text-sm text-text-secondary hover:text-gold transition-colors duration-200 cursor-pointer flex items-center gap-1">
        Voir tout
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      {articles.map((article, i) => (
        <article
          class={`group cursor-pointer rounded-card border border-border hover:border-text-muted bg-surface-raised/50 overflow-hidden transition-all duration-300 hover:shadow-card ${article.size === 'large' ? 'md:row-span-1' : ''}`}
        >
          <a href="#" class="block p-6 h-full">
            <div class={`absolute inset-0 bg-gradient-to-br ${article.bgGradient} opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none`}></div>
            <div class="relative z-10 flex flex-col h-full">
              <div class="flex items-center justify-between mb-4">
                <span class={`text-xs font-semibold ${article.categoryColor}`}>{article.category}</span>
                <span class="text-xs text-text-muted font-mono">{article.time}</span>
              </div>
              <h3 class={`font-display font-700 leading-snug group-hover:text-gold transition-colors duration-200 mb-3 ${article.size === 'large' ? 'text-h2' : 'text-h3'}`}>
                {article.title}
              </h3>
              <p class="text-sm text-text-secondary leading-relaxed mb-4 flex-grow">
                {article.excerpt}
              </p>
              <div class="flex items-center gap-2 mt-auto pt-4 border-t border-border">
                <div class="w-6 h-6 rounded-full bg-surface-hover flex items-center justify-center text-[10px] font-bold text-text-muted">
                  {article.author.split(' ').map(n => n[0]).join('')}
                </div>
                <span class="text-xs text-text-muted">{article.author}</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
