---

<section class="py-section border-t border-border">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-3">
        <div class="w-1 h-6 bg-violet rounded-full"></div>
        <h2 class="font-display font-700 text-h2">Explorer par catégorie</h2>
      </div>
    </div>

    <!-- Category Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {categories.map((cat) => (
        <a
          href={`/categorie/${cat.name.toLowerCase().replace(/ & /g, '-')}`}
          class={`group cursor-pointer rounded-card border ${cat.borderColor} bg-gradient-to-br ${cat.gradient} p-5 transition-all duration-300 hover:shadow-card hover:-translate-y-0.5`}
        >
          <div class="mb-3">
            <svg class={`w-8 h-8 ${cat.iconColor}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={cat.icon} />
            </svg>
          </div>
          <h3 class="font-display font-700 text-sm mb-1 group-hover:text-gold transition-colors duration-200">{cat.name}</h3>
          <p class="text-xs text-text-muted mb-2">{cat.description}</p>
          <span class="text-[10px] font-mono text-text-muted">{cat.articles} articles</span>
        </a>
      ))}
    </div>
  </div>
</section>
