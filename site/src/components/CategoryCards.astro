  {
    name: 'Bitcoin',
    description: 'Le roi des cryptos',
    articles: 342,
    gradient: 'from-gold/20 to-gold-dim/5',
    iconColor: 'text-gold',
    borderColor: 'border-gold/20 hover:border-gold/40',
    icon: 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z',
  },
  {
    name: 'Ethereum',
    description: 'Smart contracts & DeFi',
    articles: 289,
    gradient: 'from-info/20 to-info/5',
    iconColor: 'text-info',
    borderColor: 'border-info/20 hover:border-info/40',
    icon: 'M11.944 17.97L4.58 13.62 11.943 24l7.37-10.38-7.372 4.35z',
  },
  {
    name: 'DeFi',
    description: 'Finance décentralisée',
    articles: 198,
    gradient: 'from-positive/20 to-positive/5',
    iconColor: 'text-positive',
    borderColor: 'border-positive/20 hover:border-positive/40',
    icon: 'M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22',
  },
  {
    name: 'NFT & Gaming',
    description: 'Collectibles & play-to-earn',
    articles: 156,
    gradient: 'from-violet/20 to-violet/5',
    iconColor: 'text-violet-light',
    borderColor: 'border-violet/20 hover:border-violet/40',
    icon: 'M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128z',
  },
  {
    name: 'Régulation',
    description: 'Lois & cadre juridique',
    articles: 134,
    gradient: 'from-gold/15 to-gold/5',
    iconColor: 'text-gold-light',
    borderColor: 'border-gold/15 hover:border-gold/30',
    icon: 'M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6',
  },
  {
    name: 'Web3',
