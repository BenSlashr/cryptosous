---
import '@/styles/global.css';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import { getCollection } from 'astro:content';

const allTerms = await getCollection('glossaire');
const sortedTerms = allTerms.sort((a, b) => a.data.title.localeCompare(b.data.title, 'fr'));

// Group by first letter
const grouped = sortedTerms.reduce<Record<string, typeof sortedTerms>>((acc, term) => {
  const letter = term.data.title[0].toUpperCase();
  if (!acc[letter]) acc[letter] = [];
  acc[letter].push(term);
  return acc;
}, {});

const letters = Object.keys(grouped).sort();

const categoryColors: Record<string, string> = {
  blockchain: 'bg-info/10 text-info',
  defi: 'bg-positive/10 text-positive',
  trading: 'bg-gold/10 text-gold',
  'sécurité': 'bg-negative/10 text-negative',
  mining: 'bg-gold/10 text-gold-light',
  web3: 'bg-violet/10 text-violet-light',
  'réglementation': 'bg-surface-raised text-text-secondary',
};
---

<BaseLayout
  title="Glossaire Crypto - Toutes les définitions blockchain, DeFi, Web3 | CryptoSous"
  description="Glossaire complet des termes crypto : Bitcoin, Ethereum, DeFi, NFT, staking, smart contract... Chaque terme expliqué simplement avec des exemples concrets."
>
  <Navbar />

  <main class="pt-32 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-text-muted mb-8" aria-label="Fil d'ariane">
        <a href="/" class="hover:text-gold transition-colors cursor-pointer">Accueil</a>
        <span>/</span>
        <span class="text-text-secondary">Glossaire</span>
      </nav>

      <!-- Header -->
      <div class="mb-12">
        <h1 class="font-display font-800 text-display leading-[1.1] mb-4 tracking-tight">
          Glossaire <span class="text-gradient-gold">Crypto</span>
        </h1>
        <p class="text-body-lg text-text-secondary max-w-2xl">
          Tous les termes de la crypto expliqués clairement. De "Airdrop" à "Yield Farming", trouvez la définition qu'il vous faut.
        </p>
        <p class="text-sm text-text-muted mt-2">{allTerms.length} définitions</p>
      </div>

      <!-- Letter Navigation -->
      <div class="flex flex-wrap gap-1.5 mb-10 sticky top-28 z-10 bg-void/80 backdrop-blur-lg py-3 -mx-2 px-2 rounded-lg">
        {letters.map((letter) => (
          <a
            href={`#letter-${letter}`}
            class="w-8 h-8 rounded-md border border-border hover:border-gold/40 flex items-center justify-center text-sm font-mono text-text-secondary hover:text-gold hover:bg-gold/5 transition-all cursor-pointer"
          >
            {letter}
          </a>
        ))}
      </div>

      <!-- Terms by Letter -->
      <div class="space-y-12">
        {letters.map((letter) => (
          <section id={`letter-${letter}`}>
            <h2 class="font-display font-800 text-3xl text-border mb-4">{letter}</h2>
            <div class="space-y-3">
              {grouped[letter].map((term) => (
                <a
                  href={`/glossaire/${term.data.slug}`}
                  class="group cursor-pointer flex items-start gap-4 p-4 rounded-card border border-border hover:border-gold/30 bg-surface-raised/20 hover:bg-surface-hover/50 transition-all"
                >
                  <div class="flex-grow min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      <h3 class="font-display font-700 text-body-lg group-hover:text-gold transition-colors">{term.data.title}</h3>
                      <span class={`px-2 py-0.5 text-[10px] font-semibold rounded-full ${categoryColors[term.data.category]}`}>
                        {term.data.category}
                      </span>
                    </div>
                    <p class="text-sm text-text-secondary line-clamp-2">{term.data.shortDefinition}</p>
                  </div>
                  <svg class="w-5 h-5 text-text-muted group-hover:text-gold transition-colors flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              ))}
            </div>
          </section>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
